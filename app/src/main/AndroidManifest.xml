<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.auburn.smart">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ui.SmartApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" android:theme="@style/Theme.PageIndicatorDefaults"/>
        <activity android:name=".ui.SearchResultActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:name=".ui.WebActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:name=".ui.LoginActivity" android:windowSoftInputMode="stateHidden" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.SignupActivity" android:windowSoftInputMode="stateHidden" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.PreActivity" android:theme="@style/AppTheme"/>
    </application>

</manifest>