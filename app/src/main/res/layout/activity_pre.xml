<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/yellow_me"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:text="Choose your favorite:"
        android:textSize="22dip" />

    <LinearLayout
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Art" />

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Biology" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Education" />

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Geography" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Math" />

        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Physics" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Responsibility" />
        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Technology" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Chemistry" />
        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="History" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_marginTop="@dimen/checkbox_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Psychology" />
        <CheckBox
            android:visibility="invisible"
            android:textSize="@dimen/checkbox_text_size"
            android:layout_width="@dimen/checkbox_text_width"
            android:layout_height="@dimen/checkbox_text_height"
            android:text="Psychology" />

    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_margin="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector"
        android:padding="12dp"
        android:text="Done" />


</LinearLayout>